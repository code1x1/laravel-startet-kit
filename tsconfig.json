{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "baseUrl": "./",
        "paths": {
            "resources/*": ["./resources/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        }
    },
    "include": [
        "resources/js/**/*",
        "eslint.config.js",
        "postcss.config.js",
        "tailwind.config.js",
        "vite.config.js",
        "prettierrc.js"
    ]
}
